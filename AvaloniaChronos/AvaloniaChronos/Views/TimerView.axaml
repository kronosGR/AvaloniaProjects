<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             xmlns:vm="using:AvaloniaChronos.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaChronos.Views.TimerView"
             x:DataType="vm:TimerViewModel">
    <Design.DataContext>
        <vm:TimerViewModel/>
    </Design.DataContext>
    
    <StackPanel 
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock Grid.Row="0"
                   Text="{Binding TimeRemainingDisplay}"
                   Foreground="White"
                   FontSize="80"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Classes="h1"
                   Margin="0,0,0,40"></TextBlock>
        
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="15"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,50">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Hours" Foreground="Gray"
                           FontSize="12" HorizontalAlignment="Center">
                </TextBlock>
                <NumericUpDown Value="{Binding HoursInput}"
                               Minimum="0" Maximum="99" Width="70" Foreground="White" 
                               Background="#2B2B2B"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Minutes" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                <NumericUpDown Value="{Binding MinutesInput}" Minimum="0" Maximum="59" Width="70" Foreground="White" Background="#2B2B2B"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Seconds" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                <NumericUpDown Value="{Binding SecondsInput}" Minimum="0" Maximum="59" Width="70" Foreground="White" Background="#2B2B2B"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="30">
            <Button Content="{Binding StartPauseButtonText}"
                    Command="{Binding StartPauseTimerCommand}"
                    Classes="CircularButton PrimaryButton"></Button>
            
            <Button Content="Reset"
                    Command="{Binding ResetTimerCommand}"
                    Classes="CircularButton"></Button>
            
        </StackPanel>
        
    </StackPanel>
</UserControl>
